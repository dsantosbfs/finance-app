{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine",
      "node"
    ],
    "paths": {
      "finance-lib": ["dist/finance-lib"],
      "finance-lib/*": ["dist/finance-lib/*"],
      "node_modules": ["node_modules"],
      "node_modules/*": ["node_modules/*"]
    }
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
